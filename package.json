{
  "name": "web-file-manager",
  "version": "1.1.6",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:client": "npm run dev --workspace=@web-file-manager/client",
    "dev:server": "npm run dev --workspace=@web-file-manager/server",
    "electron:dev": "npm run build --workspace=@web-file-manager/client && npm run dev --workspace=@web-file-manager/electron",
    "electron:build": "npm run build --workspace=@web-file-manager/electron",
    "electron:dist": "npm run dist --workspace=@web-file-manager/electron",
    "electron:dist:mac": "npm run dist:mac --workspace=@web-file-manager/electron",
    "electron:dist:win": "npm run dist:win --workspace=@web-file-manager/electron",
    "electron:dist:linux": "npm run dist:linux --workspace=@web-file-manager/electron",
    "electron:dist:all": "npm run dist:all --workspace=@web-file-manager/electron",
    "postinstall": "node ./misc/prebuild-node-pty.js --apply-fixes --yes --auto-env && node ./misc/patch-node-pty-helperpath.js && node ./misc/starter.js",
    "startup": "node ./misc/starter.js"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^7.2.2",
    "vite-plugin-static-copy": "^3.1.3"
  }
}
